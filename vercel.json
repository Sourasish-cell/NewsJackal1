{
  "version": 2,
  "builds": [
    {
      "src": "newsapp/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["newsapp/**"]
      }
    },
    {
      "src": "functions/api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/newsapp/build/$1"
    },
    {
      "src": "/api/health",
      "dest": "functions/api/health.py"
    },
    {
      "src": "/api/sources",
      "dest": "functions/api/sources.py"
    },
    {
      "src": "/api/top-headlines",
      "dest": "functions/api/top_headlines.py"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-vercel-app.vercel.app/api"
  }
}
